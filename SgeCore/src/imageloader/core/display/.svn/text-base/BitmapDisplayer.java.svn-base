package com.sge.imageloader.core.display;

import android.graphics.Bitmap;

import com.sge.imageloader.core.assist.LoadedFrom;
import com.sge.imageloader.core.imageaware.ImageAware;

public interface BitmapDisplayer {
	/**
	 * Displays bitmap in {@link com.sge.imageloader.core.imageaware.ImageAware}.
	 * <b>NOTE:</b> This method is called on UI thread so it's strongly recommended not to do any heavy work in it.
	 *
	 * @param bitmap     Source bitmap
	 * @param imageAware {@linkplain com.sge.imageloader.core.imageaware.ImageAware Image aware view} to
	 *                   display Bitmap
	 * @param loadedFrom Source of loaded image
	 * ImageAware}
	 */
	void display(Bitmap bitmap, ImageAware imageAware, LoadedFrom loadedFrom);
}
